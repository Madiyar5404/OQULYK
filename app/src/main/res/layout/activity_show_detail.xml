<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Book.ShowDetailActivity">

    <include
        android:id="@+id/showToll"
        layout="@layout/toolbar2"
        >
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textAlignment="center"
                android:textSize="27sp"
                app:fontFamily="@font/asul"
                android:textColor="#373b54"
                android:textStyle="bold"
                android:layout_marginTop="84dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/priceTxt"
                android:textColor="#0C0C0C"
                android:textSize="24sp"
                android:layout_marginTop="15dp"
                android:text=" â‚¸"
                android:textAlignment="center"
                />

            <ImageView
                android:id="@+id/picfood"
                android:layout_marginTop="15dp"
                android:layout_width="400dp"
                android:layout_height="300dp"
                app:srcCompat="@drawable/kem" />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/MinusBtn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/min" />

                <TextView
                    android:id="@+id/numberOrderTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="#373b54"
                    android:layout_marginStart="16sp"
                    android:layout_marginEnd="16sp"
                    android:text="1" />

                <ImageView
                    android:id="@+id/plusBtn"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/pls" />
            </LinearLayout>

            <TextView
                android:id="@+id/descriptionTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description"
                android:layout_margin="16dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#686767"/>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/addToCartBtn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="SEBETKE QOSU"
        android:textStyle="bold"
        android:elevation="4dp"
        android:layout_margin="16dp"
        android:background="@drawable/shape_button01"
        android:gravity="center"
        android:textSize="23sp"
        app:backgroundTint="#4577B5"
        android:textColor="#FDFDFD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>